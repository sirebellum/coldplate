void setup() {
    // Start I2C
    Wire.begin();
    Wire.setClock(400000); // Set I2C clock to 400kHz

    // Set up the internal LED pin as an output
    pinMode(LED_BUILTIN, OUTPUT);
    digitalWrite(LED_BUILTIN, LOW); // Turn off the internal LED

    // Initialize the display continuously until ready
    display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
    display_splash_screen("Initializing...", snowflake_splashscreen);

    // Initialize BME280 sensor
    bme.begin(0x76);

    // Initialize the SHT31 sensor
    sht31.begin(0x44);

    // Initialize PWM
    pwm_init();

    // Initialize ADC
    adc_init();

    // Aux TEG power
    pinMode(TEG_AUX_PIN, OUTPUT);
    digitalWrite(TEG_AUX_PIN, HIGH);

    // Start ultrasonic cleaning
    ultrasonic_start();

    // Set up the ultrasonic cleaning interval
    ultrasonic_start_time = millis();
}

