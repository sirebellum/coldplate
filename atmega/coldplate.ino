        OCR0A = 255;
        OCR0B = 255;
        // Turn off the ultrasonic cleaner
        ultrasonic_stop();
        // delay
        delay(1000);
        // Read the temp sensors
        hot_temp = sht31.readTemperature() * 100;
        cold_temp = bme.readTemperature() * 100;
    }

    // Read the TEG voltages (positive and negative), take an average because PWM
    int32_t positive_voltages[TEG_SAMPLES];
    int32_t negative_voltages[TEG_SAMPLES];
    for (int i = 0; i < TEG_SAMPLES; i++) {
        positive_voltages[i] = adc_read(TEG_POSITIVE_CHANNEL);
        negative_voltages[i] = adc_read(TEG_NEGATIVE_CHANNEL);
    }
    int32_t positive_voltage = 0;
    int32_t negative_voltage = 0;
    for (int i = 0; i < TEG_SAMPLES; i++) {
        positive_voltage += positive_voltages[i];
        negative_voltage += negative_voltages[i];
    }
    positive_voltage /= TEG_SAMPLES;
    negative_voltage /= TEG_SAMPLES;
    int32_t teg_voltage = positive_voltage - negative_voltage;

    // Adjust TEG power, pump speed, and fan speed based on temperature readings
    uint8_t teg_pwm_value = adjust_teg_power(cold_temp);
    uint8_t pump_pwm_value = adjust_pump_speed(hot_temp - cold_temp);
    uint8_t fan_pwm_value = adjust_fan_speed(hot_temp);

    // Update the history
    teg_power_history[history_index % MOVING_AVG_WINDOW] = teg_pwm_value;
    cold_temp_history[history_index % MOVING_AVG_WINDOW] = cold_temp;

    // Update the history index
    history_index = (history_index + 1) % MOVING_AVG_WINDOW;

    // Detect food
    bool food_detected = detect_food();

    // Update the display
    if (food_detected) {
        display_splash_screen("FOOD DETECTED", food_splashscreen);
    } else {
        String banner_message = update_banner_message(teg_voltage, cold_temp, hot_temp);
        display_splash_screen(banner_message, snowflake_splashscreen);
    }

    // Check ultrasonic cleaning status
    check_ultrasonic_cleaning(food_detected);
}

float normalize(float value, float mean, float stdDev) {
    return (value - mean) / stdDev;
}

void insertionSort(int32_t arr[], int n) {
    for (int i = 1; i < n; i++) {
        int32_t key = arr[i];
        int j = i - 1;
        // Move elements greater than `key` one position ahead
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j = j - 1;
        }
        arr[j + 1] = key;
    }
}

// Function to get N percentile of an array
int32_t get_percentile(int32_t arr[], int32_t size, float percentile) {
    // Sort the array
    insertionSort(arr, size);

    // Get the index of the percentile
    int32_t index = (int32_t)(percentile * size);

    // Return the value at the index
    return arr[index];
}

float get_mean(int32_t arr[], int32_t size) {
    float sum = 0;
    for (int i = 0; i < size; i++) {
        sum += arr[i];
    }
    return sum / size;
}

float get_stdDev(int32_t arr[], int32_t size, float mean) {
    float sum = 0;
    for (int i = 0; i < size; i++) {
        sum += pow(arr[i] - mean, 2);
    }
    return sqrt(sum / size);
}

// Function to detect food based on TEG voltages and cold temperature
// Calculates derivatives of TEG voltages and cold temperature
bool detect_food() {
    if (history_index < 2) {
        return false;
    }

    // Calculate the latest derivative
    int32_t teg_power_derivative = teg_power_history[(history_index - 1) % MOVING_AVG_WINDOW] - teg_power_history[(history_index - 2) % MOVING_AVG_WINDOW];
    int32_t cold_temp_derivative = cold_temp_history[(history_index - 1) % MOVING_AVG_WINDOW] - cold_temp_history[(history_index - 2) % MOVING_AVG_WINDOW];

    // Calculate the mean and standard deviation of the derivatives
    float teg_power_mean = get_mean(teg_power_history, num_derivatives);
    float cold_temp_mean = get_mean(cold_temp_history, num_derivatives);
    float teg_power_stdDev = get_stdDev(teg_power_history, num_derivatives, teg_power_mean);
    float cold_temp_stdDev = get_stdDev(cold_temp_history, num_derivatives, cold_temp_mean);

    // Normalize the derivatives
    float teg_power_norm = normalize(teg_power_derivative, teg_power_mean, teg_power_stdDev);
    float cold_temp_norm = normalize(cold_temp_derivative, cold_temp_mean, cold_temp_stdDev);

    // Combine into a single activity score
    float float_activity_score = sqrt(teg_power_norm*teg_power_norm + cold_temp_norm*cold_temp_norm);

    // Update the history
    derivative_history[history_index % MOVING_AVG_WINDOW] = int32_t(float_activity_score*1000);
    if (num_derivatives < MOVING_AVG_WINDOW) {
        num_derivatives++;
    }

    // Get the Nth percentile of the activity score
    float activity_score_percentile = get_percentile(derivative_history, num_derivatives, FOOD_DETECT_PERCENTILE);

    // Return true if the activity score is above the Nth percentile
    return float_activity_score > activity_score_percentile;
}

// Function to update banner message and return the scrolled value
String update_banner_message(int32_t voltage, int32_t cold_temp, int32_t hot_temp) {
    // Convert values to float
    float voltage_f = voltage / 1000.0;
    float cold_temp_f = cold_temp / 100.0;
